      "type": "npm",
      "script": "test",
      "group": {
        "kind": "test",
        "isDefault": true
      }
    },
    {
      "label": "test:watch",
      "type": "npm",
      "script": "test:watch",
      "group": "test",
      "isBackground": true
    },
    {
      "label": "lint",
      "type": "npm",
      "script": "lint",
      "group": "build"
    },
    {
      "label": "lint:fix",
      "type": "npm",
      "script": "lint:fix",
      "group": "build"
    },
    {
      "label": "format",
      "type": "npm",
      "script": "format",
      "group": "build"
    },
    {
      "label": "type-check",
      "type": "npm",
      "script": "type-check",
      "group": "build"
    },
    {
      "label": "quality",
      "type": "npm",
      "script": "quality",
      "group": "build",
      "dependsOrder": "sequence"
    },
    {
      "label": "quality:fix",
      "type": "npm",
      "script": "quality:fix",
      "group": "build",
      "dependsOrder": "sequence"
    }
  ]
